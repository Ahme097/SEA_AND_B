<%= form_with(model: [@yacht, @booking, @review]) do |form| %>
    <%= form.hidden_field :booking_id, value: @booking.id %>

    <%= form.label :rating %>
    <%= form.number_field :rating, in: 1..10 %>

    <%= form.label :comment %>
    <%= form.text_area :comment %>

    <%= form.submit "Submit Review" %>
<%= end %>
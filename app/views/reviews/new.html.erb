<div class="container">
    <div class="row justify-content-center"> 
        <div class="col-md-8 form-container"> <!-- Adjust the width of the form -->
            <h1 class="form-heading text-left">
            How was your experience with <%= @yacht.name %>?
            </h1>
            <div class="review-form">
                <%= simple_form_for([@yacht, @review], html: { class: 'form-horizontal' }) do |f| %>
                    <div class="rating">
                        <%= f.label :rating, class: 'control-label col-sm-2' %>
                        <div class="col-sm-10">
                            <%= f.input :rating, collection: 1..10, label: false, class: 'form-control' %>
                        </div>
                    </div>
                    <div class="comment">
                        <%= f.label :comment, class: 'control-label col-sm-2' %>
                        <div class="col-sm-10">
                            <%= f.input :comment, as: :text, label: false, class: 'form-control' %>
                        </div>
                    </div>

                    <div class="submit-button">
                        <div class="col-sm-offset-2 col-sm-10 btn">
                            <%= f.button :submit, "Submit Review" %>
                        </div>
                    </div>
                <% end %>
            </div>
        </div>
    </div>
</div>
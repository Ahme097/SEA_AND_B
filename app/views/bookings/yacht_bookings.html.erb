
<%if @bookings.exists? %>
<h1>You currently have <%=@bookings.count %> booking requests</h1>

  <% @bookings.each do |booking| %>
    <p><strong>£<%= booking.total_price%></strong> calculated for the duration of <%= (booking.end_date - booking.start_date).to_i %> days at a rate of £<%=booking.yacht.price_per_day %>  per day</p>
  <h2><%= booking.yacht.name %></h2>
  <p><strong>Reference Number: SB00<%= booking.id %></strong> </p>
  <p><strong>Name of renter</strong> <%= Faker::Name.name_with_middle %></p>
  <p><strong>Email address</strong> <%= User.find(booking.user_id).email %></p>
   <p><strong>Start Date</strong> <%= booking.start_date %></p>
  <p><strong>End Date</strong> <%= booking.end_date %></p>
  <p><strong>Email:</strong>  <%= Faker::Internet.email %></p>
  <p><strong>Phone:</strong>  <%= Faker::PhoneNumber.cell_phone %></p>

  <%= image_tag booking.yacht.yacht_image, class: "yacht_photos-show" %>
  <button>Accept Booking Request</button>
  <%# ----Need to add a chechbox to confirm the booking request ------ %>
<% end %>

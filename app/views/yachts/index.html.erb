 <style>

  .card{
  width: 100%;
  height: 100%;
  border-radius: 5px;
  display: flex;
  justify-content: space-between; /* Items are spaced with equal gap */
  flex-direction: row;
  margin-top: 20px;
  margin-right: 25px;
}

.right-section{
  background-color: lightblue;
  margin-right: 10px; /* Add a small gap between left and right sections */
  width: 40%;
}

.left-section{
  display: flex;
  align-items: center;
  justify-content: center;
  overflow: hidden; /* Hide overflowing content */
  width: 60%;
  /* flex-grow: 4; */
}

.left-section img {
  max-width: 100%; /* Ensure the image doesn't exceed the right section's width */
  max-height: 100%; /* Ensure the image doesn't exceed the right section's height */
}

h2, p{
  margin-left: 25px;
}
</style>

  <h2>Available Yachts in <%= Time.now.strftime('%B, %Y') %></h2>
  <hr>
  <ul>

<% @yachts.each do |yacht| %>
<div class="card">
<div class="left-section">
    <%= image_tag yacht.yacht_image, class: 'yacht_photos' %>
</div>
<div class="right-section">

    <h2><%= yacht.name %></h2>
    <p><strong>Maximum Guests:</strong> <%= yacht.max_guest %></p>
    <p><strong>Cabin Count:</strong> <%= yacht.cabin %></p>
    <p><strong>Price per Day:</strong> Â£<%= yacht.price_per_day %></p>
    <p><strong>Description:</strong> <%= yacht.description %></p>
    <p><a href="<%= yacht_path(yacht) %>">View Details</a></p>
    </div>
    </div>

<% end %>
  </ul>

<h1>Edit Yacht Listing</h1>

<%= simple_form_for [@yacht] do |f| %>
  <%= f.input :name %>
  <%= f.input :address %>
  <%= f.input :max_guest %>
  <%= f.input :cabin %>
  <%= f.input :price_per_day %>
  <%= f.input :description %>
  <%= f.input :yacht_image, as: :file %>
  <%= f.input :yacht_interior_image, as: :file %>
  <%= f.input :yacht_cabin_image, as: :file %>
  <%= f.button :submit, class: 'btn btn-primary' %>
<% end %>

<%= link_to 'Back to Yachts', yachts_path %>
<%= link_to 'Delete Yacht',
            yacht_path(@yacht),
            method: :delete,
            data: { confirm: 'Are you sure you want to delete this yacht?' } %>
<style>
body{
background-color: #d8e1e9;
}
</style>
